const getStatusBadgeVariant = (status: StatusType) => {
  switch (status) {
    case "Approved":
      return "success";
    case "Acknowledged":
      return "info";
    case "Denied":
      return "destructive";
    case "Follow-up":
      return "warning";
    default:
      return "secondary";
  }
};

